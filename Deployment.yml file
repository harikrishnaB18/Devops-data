#Deployment
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
spec:
  replicas: 2
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      name: nginx-pod
      labels:
        app: nginx
    spec:
      containers:
      - name: nginxcontainer
        image: nginx
        ports:
        - containerPort: 80

create a deployment yml file
#kubectl create -f <file name>
To connect a pod
#kubectl exec -it nginx-deployment - <id of pod> --bash
To check the deployments
#kubectl get deployments
To check the labels
#kubectl get pods --show-labels
